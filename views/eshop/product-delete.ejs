<%- include("header", {title: title}); %>
    <main style="margin-top:50px;" class="centered">

        <h1>Delete product details</h1>

        <p>This is the product details for <%= res[0].produkt_namn %>.</p>

        <% res=res[0] %> <!-- Extracting the first product object -->

            <form class="label-left centered" method="post" action="/eshop/delete">
                <fieldset>
                    <legend>Delete account</legend>

                    <label for="id">Id</label>
                    <input id="produkt_id" type="text" name="produkt_id" readonly value="<%= res.produkt_id %>">

                    <label for="name">Name</label>
                    <input id="produkt_namn" type="text" name="produkt_namn" readonly value="<%= res.produkt_namn %>">

                    <label for="produkt_beskrivning">Description</label>
                    <textarea id="produkt_beskrivning" name="produkt_beskrivning"
                        readonly><%= res.produkt_beskrivning %></textarea>


                    <label for="produkt_pris">Price</label>
                    <input id="produkt_pris" type="number" step="0.01" name="produkt_pris" readonly
                        value="<%= res.produkt_pris %>">

                    <input type="submit" name="doit" value="Delete product">
                </fieldset>
            </form>
    </main>

    <br>
    <br>
    <%- include("footer"); %>